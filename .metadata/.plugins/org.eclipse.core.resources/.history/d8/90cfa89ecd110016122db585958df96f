uint8 test_setIL()
{
	addMLOperator(ML_CODE_LD);addMLOperand(OPERAND_ML_CODE_X, 0);
	addMLOperator(operatorMLCode);
	test_setOperand();
	addMLOperator(ML_CODE_END);addMLOperand(OPERAND_ML_CODE_X, 0);
	TestCodeTearDown();
}
