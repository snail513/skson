#ifndef PLC_MASTERCONTROLLER_H_
#define PLC_MASTERCONTROLLER_H_

#include "PLC_Definitions.h"
typedef struct {
	uint8 bIsload;
	uint8 isOn;
	uint8 operand[3];
}MC_Unit;


typedef struct {
	uint8 isCurrMCOn;
	MC_Unit arrMCTable[15];
}MC_Table;

uint8 PLC_MasterController_setFlag(MC_Table *table, uint8 mcFlag, uint8 operand[]);
uint8 PLC_MasterController_getAndRemoveFlag(MC_Table *table, uint8* operand, uint8 mcFlag);
void PLC_MasterController_init(MC_Table * table);
#endif /* PLC_MASTERCONTROLLER_H_ */
