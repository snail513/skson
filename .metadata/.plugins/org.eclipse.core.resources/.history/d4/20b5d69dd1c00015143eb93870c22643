#ifndef PLC_POINT_H_
#define PLC_POINT_H_
#include "PLC_Definitions.h"


typedef struct{
	uint8 taskIdx;
	uint16 nLabel;
	uint32 nDevicePoint;
}PLC_Point;

uint8 PLC_Point_isPoint(uint8 inst[],uint32* pos);
uint8 PLC_Point_set(PLC_Point* point, uint8 taskIdx, uint16 label, uint32 pos);
uint8 PLC_Point_init(PLC_Point* point);
uint16 PLC_Point_getLabel(PLC_Point* point);
uint32 PLC_Point_getPoint(PLC_Point* point);


#endif /* PLC_POINT_H_ */
